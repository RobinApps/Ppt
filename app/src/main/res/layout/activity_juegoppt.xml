<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="com.example.rob.ppt.Juegoppt"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation ="vertical">








            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/LbContador"
                android:textSize="100dp"
                android:layout_gravity="center_horizontal" />




    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation ="horizontal">


            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Oponente:"
                android:id="@+id/LbOponente"

                android:textSize="15dp" />

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/LbGanaOP"
                android:textSize="15dp" />

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Tu:"
                android:id="@+id/LbTu"
                android:textSize="15dp"
                />

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/LgGanaTu"
                android:textSize="15dp" />

    </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="GanaOPierde"
                android:id="@+id/LbResultado"
             />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation ="horizontal"

        android:gravity="center">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imgOp"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation ="horizontal"
        android:padding="20dp"
        android:gravity="center">

        <Button

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/BtPiedra"
            android:background="@drawable/picpiedra"
             />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/BtPapel"
            android:background="@drawable/picpapel"

             />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/BtTijera"
            android:background="@drawable/pictijera"

             />


</LinearLayout>
    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:id="@+id/BtNuevo"
        android:background="@drawable/play2"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
