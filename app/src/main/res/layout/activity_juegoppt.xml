<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rob.ppt.Juegoppt">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piedra"
        android:id="@+id/BtPiedra"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papel"
        android:id="@+id/BtPapel"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tijera"
        android:id="@+id/BtTijera"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/LbContador"
        android:textSize="100dp"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Oponente:"
        android:id="@+id/LbOponente"
        android:textSize="20dp"
        android:layout_below="@+id/LbContador"
        android:layout_toLeftOf="@+id/LbContador"
        android:layout_toStartOf="@+id/LbContador" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tu:"
        android:id="@+id/LbTu"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/LbOponente"
        android:layout_alignStart="@+id/LbOponente"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GanaOPierde"
        android:id="@+id/LbResultado"
        android:layout_below="@+id/LbTu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De Nuevo"
        android:id="@+id/BtNuevo"
        android:layout_above="@+id/BtPapel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/LbGanaOP"
        android:textSize="20dp"
        android:layout_alignTop="@+id/LbOponente"
        android:layout_alignRight="@+id/BtTijera"
        android:layout_alignEnd="@+id/BtTijera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/LgGanaTu"
        android:textSize="20dp"
        android:layout_alignTop="@+id/LbTu"
        android:layout_alignLeft="@+id/LbGanaOP"
        android:layout_alignStart="@+id/LbGanaOP" />

</RelativeLayout>
